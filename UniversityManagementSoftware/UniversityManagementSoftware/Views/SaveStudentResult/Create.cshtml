@model UniversityManagementSoftware.Models.SaveStudentResult

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>SaveStudentResult</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            <label class="control-label col-md-2">Registration No</label>
            <div class="col-md-10">
                @Html.DropDownListFor(x => x.RegstrationNo, new SelectList(ViewBag.RegisterStudents, "Id", "RegstrationNo"), "Select RegstrationNo", new { @class = "" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.StudentName, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.StudentName)
                @Html.ValidationMessageFor(model => model.StudentName)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.StudentEmail, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.StudentEmail)
                @Html.ValidationMessageFor(model => model.StudentEmail)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DepartmentName, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DepartmentName)
                @Html.ValidationMessageFor(model => model.DepartmentName)
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2">Couse Code</div>
            <div class="col-md-10">
                @Html.DropDownListFor(x => x.CourseCode, new SelectList(ViewBag.Courses, "CourseCode", "CourseCode"), "Select Course code", new { @class = "" })
            </div>
        </div>
        
        <div class="form-group">
            <div class="control-label  col-md-2"><p>Select Grade</p></div>
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.GradeLatter, (SelectList)ViewBag.SelectGradLetter)
                @Html.ValidationMessageFor(model => model.GradeLatter, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

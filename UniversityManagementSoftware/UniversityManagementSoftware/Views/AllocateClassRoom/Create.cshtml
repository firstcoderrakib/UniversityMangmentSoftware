@model UniversityManagementSoftware.Models.AllocateClassRoom

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>AllocateClassRoom</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            <label class="control-label col-md-2">Department</label>
            <div class="col-md-10">
                @Html.DropDownListFor(x => x.DepartmentId, new SelectList(ViewBag.Departments, "DepartmentName", "DepartmentName"), "Select Department", new { @class = "" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2">Couse Code</div>
            <div class="col-md-10">
                @Html.DropDownListFor(x => x.CourseCode, new SelectList(ViewBag.Courses, "CourseCode", "CourseCode"), "Select Course code", new { @class = "" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label  col-md-2"><p>Room</p></div>
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.RoomId, (SelectList)ViewBag.categoryRomList)
                @Html.ValidationMessageFor(model => model.RoomId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label  col-md-2"><p>Day</p></div>
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.DateOfSaven, (SelectList)ViewBag.categoryDayList)
                @Html.ValidationMessageFor(model => model.DateOfSaven, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.StartTime, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input id="StartTime" name="StartTime" type="time">
                @Html.ValidationMessageFor(model => model.StartTime)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.EndTime, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input id="EndTime" name="EndTime" type="time">
                @Html.ValidationMessageFor(model => model.EndTime)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
